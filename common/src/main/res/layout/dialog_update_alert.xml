<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/quantum_panel"
    android:layout_marginRight="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginLeft="20dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_update_alert_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="left"
        android:textColor="@color/light_black"
        android:padding="10dp"
        android:text="检查更新"
        android:textSize="16sp" />

    <FrameLayout
        android:id="@+id/fm_dialog_update_alert_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:minHeight="60dp"
        android:padding="10dp"
        android:layout_below="@+id/tv_dialog_update_alert_title" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="end"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fm_dialog_update_alert_content">

        <TextView
            android:id="@+id/tv_dialog_update_alert_negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/cancel"
            android:textColor="#009688" />

        <TextView
            android:id="@+id/tv_dialog_update_alert_postive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/confirm"
            android:textColor="#009688" />
    </LinearLayout>

</RelativeLayout>