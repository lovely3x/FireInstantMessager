<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="100dp">

    <com.lovely3x.common.widgets.RoundedImageView
        android:id="@+id/grid_item_common_image_picker_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:riv_oval="false"
        app:riv_corner_radius="2dp"
        android:scaleType="centerCrop" />

    <CheckedTextView
        android:id="@+id/ctv_grid_item_common_image_picker_checker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:drawableEnd="@drawable/check_selector"
        android:drawableRight="@drawable/check_selector"
        android:padding="2dp" />
</android.support.v7.widget.CardView>